{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "Node16",
    "target": "ES2022",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "useUnknownInCatchVariables": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // true to avoid incompatibility with @grammyjs/i18n
  },
  "include": ["src/**/*.ts", "eslint.config.js"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
